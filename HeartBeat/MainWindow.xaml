<Window x:Class="HeartBeat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input time tracking example" Height="150" Width="250" >
    <Grid>
        <Frame x:Name="Main"></Frame>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top">Last keyboard input time:</Label>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,0,0,0" Name="keyboardTime"></Label>

        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,20,0,0">Last mouse input time:</Label>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,20,0,0" Name="mouseTime"></Label>

        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0">Last input time:</Label>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,40,0,0" Name="lastInputTime"></Label>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="10,66,0,0" TextWrapping="Wrap" Text="Your VM is idle chuchuchu" VerticalAlignment="Top" Width="222"/>
        <Button Content="OKAY" HorizontalAlignment="Left" Margin="91,96,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
